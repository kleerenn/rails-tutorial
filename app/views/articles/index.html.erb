<h1>Article listing page</h1>


<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Descriptione</th>
			<th colspan="3">Action</th>
		</tr>
	<thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.title %></td>
				<td><%= article.description %></td>
				<td><%= link_to 'Show', article_path(article) %></td>
				<td><%= link_to 'Edit', edit_article_path(article) %></td>
				<td><%= link_to 'Delete', article_path(article), method: :delete,  data: { turbo_confirm: "Are you sure?" } %></td>
				<td><%= button_to 'Delete', article_path(article), method: :delete,  data: { turbo_confirm: "Are you sure?" } %></td>

			</tr>
		<% end %>
	</tbody>
</table>

<p>
<%= link_to 'Create new Article' ,new_article_path%>
<%= link_to 'Back to Home', root_path %>

</p>
