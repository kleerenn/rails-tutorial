<div class="container"> 
	<% if @article.errors.any? %>
		<h2> The following erros prevented the article from being saved </h2>
		<ul>
			<% @article.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>


<div class="row justify-center-center">
	<div class="col-10">
		<%= form_with(model: @article, class:"shadow p-3 mb-3 bg-info rounded",local: true,)  do |f| %>
			<div class="form-group row">
				<%= f.label :title , class: "col-sm-2 col-form-label text-light"%> 
				<div class="col-10">
					<%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
				</div>
			</div>

			<div class="form-group row mt-4">
				<%= f.label :description , class: "col-sm-2 col-form-label text-light"%> 
				<div class="col-10">
					<%= f.text_area :description, rows: 10, class:"form-control shadow rounded",placeholder: "Description of article"%>
				</div>	
			</div>


		  <div class="form-group row justify-content-center mt-4">
        <%= f.submit class: "btn btn-outline-light btb-lg" %>
      </div>
		<% end %>
		</div>
		<%= link_to 'Cancel & Return to list', articles_path, class:"text-info" %>
	</div>
</div>